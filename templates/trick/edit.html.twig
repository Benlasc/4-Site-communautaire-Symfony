{% extends 'base.html.twig' %}

{% block title %}Edition de figure
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-7 mx-auto">
				<div class="card bg-light mb-3 mt-5">
					<div class="card-body">
						<div class="card-header mb-3 text-center">Modifier la figure</div>
						{% for label, messages in app.flashes %}
							{% for message in messages %}
								<div class="alert alert-{{ label }}" role="alert">
									{{ message }}
								</div>
							{% endfor %}
						{% endfor %}
						{{ include('trick/_form.html.twig', {'button_label': 'Enregistrer les modifications'}) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="https://cdn.ckeditor.com/ckeditor5/29.1.0/classic/ckeditor.js"></script>
    <script src="/js/edit.js"></script>
{% endblock %}
