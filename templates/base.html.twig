<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
										           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid">
				<a class="navbar-brand" href="#"><img src="/assets/logo.png" alt="logo" width="50px"></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Tricks</a>
						</li>
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link me-lg-5" href="#" style="
										    position: relative;
										">
									<span>{{app.user.name}}</span>
                                    {% if app.user.avatar %}
									<img class="rounded-circle d-inline-block" src="{{app.user.avatar.getWebPath}}" alt="{{app.user.avatar.alt}}" width="50px" height="50px" style="
									    position: absolute;
									    top: 50%;
									    transform: translateY(-50%);
									    right: -50px;
									">                                        
                                    {% else %}
									<img class="rounded-circle d-inline-block" src="/uploads/avatars/avatar.png" alt="logo" width="50px" height="50px" style="
									    position: absolute;
									    top: 50%;
									    transform: translateY(-50%);
									    right: -50px;
									">                    
                                    {% endif %}

								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link ms-lg-2" href="{{ path('app_logout') }}">Logout</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">Sign in</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('registration') }}">Sign up</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
		{% block body %}{% endblock %}
	</body>
</html>
