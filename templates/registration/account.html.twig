{% extends 'base.html.twig' %}

{% block title %}Modification du compte
{% endblock %}

{%block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-7 mx-auto">
				<div class="card bg-light mb-3 mt-5">
					<div class="card-body">
						<div class="card-header mb-3 text-center">Modifiez votre compte</div>
						{% for label, messages in app.flashes %}
							{% for message in messages %}
								<div class="alert alert-{{ label }}" role="alert">
									{{ message }}
								</div>
							{% endfor %}
						{% endfor %}
						{{ form_start(form) }}
						<div class="form_group">
							<div class="col-md-12 mb-3">
								{{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3">
								{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3">
								{{ form_row(form.password.first, {'attr': {'class':'form-control'},
                                                                  'help': 'Au moins 6 caract√®res, au moins 1 majuscule et un chiffre'}) }}
							</div>
						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3">
								{{ form_row(form.password.second, {'attr': {'class':'form-control'}}) }}
							</div>
						</div>
						<div class="form_group">
							<div class="col-md-12 mb-3">
								{{ form_label(form.avatar) }}
								{{ form_widget(form.avatar) }}
								{{ form_errors(form.avatar) }}
								{{ form_help(form.avatar, {'help': 'Jpeg ou png (taille max : 1024 ko)'}) }}
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
								<button type="submit" class="btn btn-primary">
									<i class="fa fa-btn fa-user"></i>
									Valider les modifications
								</button>
							</div>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
